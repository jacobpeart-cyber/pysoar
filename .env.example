# PySOAR Configuration
# Copy this file to .env and fill in your values

# Application
APP_NAME=PySOAR
APP_ENV=development
DEBUG=true
SECRET_KEY=your-super-secret-key-change-in-production
API_V1_PREFIX=/api/v1

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
# SQLite (default for development)
DATABASE_URL=sqlite+aiosqlite:///./pysoar.db
# PostgreSQL (for production)
# DATABASE_URL=postgresql+asyncpg://pysoar:pysoar@localhost:5432/pysoar

# Redis
REDIS_URL=redis://localhost:6379/0
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# JWT Authentication
JWT_SECRET_KEY=your-jwt-secret-key-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# First Admin User (created on first run)
FIRST_ADMIN_EMAIL=admin@pysoar.local
FIRST_ADMIN_PASSWORD=changeme123

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# =============================================================================
# INTEGRATIONS (Free Tier API Keys)
# =============================================================================

# VirusTotal (https://www.virustotal.com/gui/join-us)
VIRUSTOTAL_API_KEY=

# AbuseIPDB (https://www.abuseipdb.com/account/api)
ABUSEIPDB_API_KEY=

# Shodan (https://account.shodan.io/)
SHODAN_API_KEY=

# GreyNoise (https://viz.greynoise.io/signup)
GREYNOISE_API_KEY=

# URLScan.io (https://urlscan.io/user/signup)
URLSCAN_API_KEY=

# Have I Been Pwned (https://haveibeenpwned.com/API/Key)
HIBP_API_KEY=

# =============================================================================
# NOTIFICATIONS
# =============================================================================

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM=noreply@pysoar.local
SMTP_TLS=true

# Slack Webhook (optional)
SLACK_WEBHOOK_URL=

# Microsoft Teams Webhook (optional)
TEAMS_WEBHOOK_URL=

# =============================================================================
# EXTERNAL SERVICES (Optional)
# =============================================================================

# Elasticsearch/OpenSearch (for log ingestion)
ELASTICSEARCH_URL=
ELASTICSEARCH_API_KEY=

# Splunk
SPLUNK_HOST=
SPLUNK_TOKEN=

# AWS (for cloud integrations)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
